{{#each items as |item|}}
  <div class="menu-item" data-id="{{item.id}}">
    <button type="button" class="btn btn-success menu-button-add float-right"  data-id="{{item.id}}"><i class="fa fa-plus-square" data-id="{{item.id}}" aria-hidden="true"></i></button>
    <span class="menu-item-span" data-id="{{item.id}}">{{item.name}}</span>
</div>
{{/each}}
